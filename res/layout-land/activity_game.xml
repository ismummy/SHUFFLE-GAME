<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Game" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />
     <ProgressBar
        android:id="@+id/live"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:max="100"
        android:progress="100"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/live"
        android:background="@drawable/player"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:text="ISMUMMY"
        android:textColor="#fff"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player"
        android:layout_below="@+id/player"
        android:background="@drawable/shuffled"
        android:orientation="vertical"
        android:paddingLeft="23dp"
        android:paddingTop="25dp" >

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/player"
        android:layout_marginLeft="68dp"
        android:layout_toRightOf="@+id/player"
        android:background="@drawable/input"
        android:ems="10"
        android:padding="10dp"
        android:text=""
        android:hint="Enter Word"
        android:textColor="#fff"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/input"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/input"
        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
        android:src="@drawable/enter" />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
        android:src="@drawable/previous" />

    <ImageButton
        android:id="@+id/reshuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/previous"
        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
        android:src="@drawable/shuffle" />

    <ImageButton
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/reshuffle"
        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
        android:src="@drawable/submit" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/submit"
        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
        android:src="@drawable/next" />

    <TextView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/layout"
        android:background="@drawable/cat"
        android:padding="10dp"
        android:text="GAME CATEGORY: Education"
        android:textColor="#fff"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/layout"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/a" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/h" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/u" />
        <ImageView
            android:id="@+id/imageVdiew1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/f" />

        <ImageView
            android:id="@+id/imaggeView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/f" />

        <ImageView
            android:id="@+id/imageVsiew3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/l" />

         <ImageView
             android:id="@+id/imaggeVidew2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/e" />

    </LinearLayout>
</RelativeLayout>